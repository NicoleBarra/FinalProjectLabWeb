<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Entrega Parcial 1">
  <meta name="author" content="">

  <title>Artist Social Media</title>

  <!-- Bootstrap core CSS -->
  <link href="../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="../css/heroic-features.css" rel="stylesheet">

</head>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-danger fixed-top">
    <div class="container">
      <a class="navbar-brand" href="./">Artist Social Media</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="./">Popular
              <span class="sr-only">(current)</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="./MyTimeline">My Timeline</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="./MyGallery">My Gallery</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="./MyGallery">{{username}}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="./Logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="container">

    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
      <h1 class="display-3">My Gallery</h1>
      <p class="lead"></p>
      <a href="./myfollows" class="btn btn-danger">My Follows</a>
      <a href="./myfollowers" class="btn btn-danger">My Followers</a>
      <a href="./Image" class="btn btn-danger">Upload Images</a>
    </header>

    <!-- Page Features -->
    <div class="row text-center">
      


      {{#each images}}
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="card h-100">
            <a href="./Uploads/{{this.id}}"><img class="card-img-top" src="{{this.imgUrl}}" alt=""></a>
            <div class="card-body">
              <h4 class="card-title">{{this.title}}</h4>
              <p class="card-text">{{this.description}}</p>
            </div>
            <div class="card-footer">
              <a href="#" class="btn btn-danger">{{this.user}}</a>
            </div>
          </div>
        </div>
      {{/each}}

      

    
  <!-- /.container -->

    <!-- /.container -->
    

  <!-- Bootstrap core JavaScript -->
  <script>
    console.log("{{username}}");

  </script>
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>



</body>

</html>
